{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "windmill/windmill-theme",
	"description": "An extensible WordPress theme for developers and designers",
	"type": "wordpress-theme",
	"license": "GPL-3.0",
	"autoload": {
		"psr-4": {
			"Windmill\\WindmillTheme\\": "src/"
		}
	},
	"authors": [
		{
			"name": "Max Caplan",
			"email": "contact@maxcaplan.com"
		}
	],
	"require": {
		"php": "8.3.*",
		"composer/installers": "^2.3"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"squizlabs/php_codesniffer": true,
			"wp-coding-standards/wpcs": true
		}
	},
	"require-dev": {
		"php-stubs/wordpress-stubs": "^6.9",
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"squizlabs/php_codesniffer": "^3.13"
	}
}
